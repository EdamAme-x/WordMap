{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    // TSは下位のECMAScriptに変換
    "target": "ES2020",
    // TSのモジュールはES Modulesとして出力
    "module": "ES2020",
    // node_modules からライブラリを読み込む
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "allowJs": true,
    "lib": [
      "ES2021",
      "DOM"
    ]
  }
}
